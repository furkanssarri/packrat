<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
          <h4 class="text-center text-primary fw-bold mb-4">Create your Pigeon account</h4>

          <form action="/auth/signup" method="POST" class="needs-validation" novalidate>
            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control <%= errors?.find(e => e.param === 'email') ? 'is-invalid' : '' %>"
                value="<%= formData?.email || '' %>"
                placeholder="Enter your email"
                required
              />
              <% errors?.filter(e => e.param === 'email').forEach(e => { %>
                <div class="invalid-feedback"><%= e.msg %></div>
              <% }) %>
            </div>

            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                id="username"
                name="username"
                class="form-control <%= errors?.find(e => e.param === 'username') ? 'is-invalid' : '' %>"
                value="<%= formData?.username || '' %>"
                pattern="^[a-zA-Z0-9_]{3,30}$"
                placeholder="Choose a username"
                required
              />
              <% errors?.filter(e => e.param === 'username').forEach(e => { %>
                <div class="invalid-feedback"><%= e.msg %></div>
              <% }) %>
              <div class="invalid-feedback">
                Username must be 3â€“30 characters and contain only letters, numbers, or underscores.
              </div>
            </div>

            <!-- First Name -->
            <div class="mb-3">
              <label for="firstName" class="form-label">First Name <span class="text-muted">(optional)</span></label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                class="form-control"
                value="<%= formData?.firstName || '' %>"
                placeholder="Enter your first name"
              />
            </div>

            <!-- Last Name -->
            <div class="mb-3">
              <label for="lastName" class="form-label">Last Name <span class="text-muted">(optional)</span></label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                class="form-control"
                value="<%= formData?.lastName || '' %>"
                placeholder="Enter your last name"
              />
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control <%= errors?.find(e => e.param === 'password') ? 'is-invalid' : '' %>"
                placeholder="Enter a strong password"
                required
              />
              <% errors?.filter(e => e.param === 'password').forEach(e => { %>
                <div class="invalid-feedback"><%= e.msg %></div>
              <% }) %>
            </div>

            <!-- Confirm Password -->
              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  class="form-control"
                  placeholder="Re-enter your password"
                  required
                />
                <% errors?.filter(e => e.param === 'confirmPassword').forEach(e => { %>
                  <div class="invalid-feedback"><%= e.msg %></div>
                <% }) %>
              </div>

            <!-- Submit -->
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Sign Up
              </button>
            </div>
          </form>

          <p class="text-center text-muted mt-3 mb-0">
            Already have an account?
            <a href="/auth/login" class="text-decoration-none">Log in</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (() => {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach(form => {
      form.addEventListener("submit", event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add("was-validated");
      }, false);
    });
  })();
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    tooltipTriggerList.map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
  });
</script>
