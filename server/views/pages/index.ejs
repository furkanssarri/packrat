<main class="text-center py-5">
  <div class="container">
    <% if (!user) { %>
      <h1 class="fw-bold display-5 mb-3 text-primary">
        Welcome to Pigeon üê¶
      </h1>
      <p class="lead text-muted mb-4">
        Simple. Secure. Cloud storage that just works.
      </p>

      <div class="d-flex justify-content-center gap-3">
        <a href="/auth/signup" class="btn btn-primary btn-lg">
          <i class="bi bi-person-plus"></i> Create an account
        </a>
        <a href="/auth/login" class="btn btn-outline-primary btn-lg">
          <i class="bi bi-box-arrow-in-right"></i> Log in
        </a>
      </div>

      <hr class="my-5" />

      <section class="text-muted">
        <h5 class="fw-semibold mb-3">Why Pigeon?</h5>
        <div class="row g-4 justify-content-center">
          <div class="col-md-4">
            <i class="bi bi-cloud-upload display-6 text-primary"></i>
            <h6 class="mt-3">Effortless Uploads</h6>
            <p>Upload your files and access them anywhere with a single click.</p>
          </div>
          <div class="col-md-4">
            <i class="bi bi-shield-check display-6 text-primary"></i>
            <h6 class="mt-3">Secure Storage</h6>
            <p>Your data is encrypted and stored safely in the cloud.</p>
          </div>
          <div class="col-md-4">
            <i class="bi bi-folder2-open display-6 text-primary"></i>
            <h6 class="mt-3">Organize with Ease</h6>
            <p>Create folders and manage your files just like on your desktop.</p>
          </div>
        </div>
      </section>
    <% } else { %>
      <h1 class="fw-bold display-5 mb-3 text-primary">
        Welcome back, <%= user.username %>!
      </h1>
      <p class="lead text-muted mb-4">
        Ready to manage your files?
      </p>

      <div class="d-flex justify-content-center gap-3">
        <a href="/dashboard" class="btn btn-primary btn-lg">
          <i class="bi bi-folder"></i> Go to My Files
        </a>
        <form action="/logout?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-outline-secondary btn-lg" type="submit">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </div>
    <% } %>
  </div>
</main>
