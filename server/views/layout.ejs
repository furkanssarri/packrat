    ></script>
  <!-- üåô Theme Logic -->
  <script>
    const prefersDark = window.matchMedia("(prefers-color-scheme: dark)");
    const root = document.documentElement;
    const themeBtn = document.getElementById("themeToggleBtn");
    const themeIcon = document.getElementById("themeIcon");

    // Load saved theme or OS preference
    const savedTheme = localStorage.getItem("theme");
    const currentTheme = savedTheme || (prefersDark.matches ? "dark" : "light");
    root.setAttribute("data-bs-theme", currentTheme);
    themeIcon.class =
      currentTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";

    // Toggle theme with animation
    themeBtn.addEventListener("click", () => {
      themeIcon.classList.add("rotate"); // animation class
      const newTheme =
        root.getAttribute("data-bs-theme") === "dark" ? "light" : "dark";
      root.setAttribute("data-bs-theme", newTheme);
      themeIcon.class =
        newTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";
      localStorage.setItem("theme", newTheme);
      setTimeout(() => themeIcon.classList.remove("rotate"), 300);
    });

    // Auto-detect OS theme changes if user didn‚Äôt override
    prefersDark.addEventListener("change", (e) => {
      if (!localStorage.getItem("theme")) {
        const newTheme = e.matches ? "dark" : "light";
        root.setAttribute("data-bs-theme", newTheme);
        themeIcon.class =
          newTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";
      }
    });
  </script>
  </body>
